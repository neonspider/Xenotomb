script "print_msg" (void)
{
		for (int i = 0; i < 7; ++i)
		{
			SetFont("SMALLFONT");
			HudMessage(s:msg[i]; HUDMSG_TYPEON, 0, CR_DARKGREEN, 0.5, -0.75, 1.0, 0.1, 2.5);
			Delay(300);
		}
}

